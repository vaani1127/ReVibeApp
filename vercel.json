{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/pages/(.*)",
      "dest": "/frontend/public/pages/$1"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "/frontend/public/scripts/$1"
    },
    {
      "src": "/style.css",
      "dest": "/frontend/public/style.css"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/public/index.html"
    }
  ]
}